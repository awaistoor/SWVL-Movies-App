<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SWVLMoviesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/window_background_color</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTextView.Title" parent="AppTextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextView.SubTitle" parent="AppTextView">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="AppTextView.SubTitle.Bold" parent="AppTextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextView.Badge" parent="AppTextView">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:background">@drawable/bg_badge</item>
    </style>

    <style name="AppTextView.ToolbarTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/lobster</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextView.CollapsingToolbarLayoutTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/lobster</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>